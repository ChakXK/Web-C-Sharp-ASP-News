@using Microsoft.AspNet.Identity
@using System.Linq;
@using System.Threading.Tasks;
@using System.Net;
@using System.Web;
@using System.Web.Mvc;
@using news.Models;


@{ApplicationDbContext db = new ApplicationDbContext();
    var articles = db.Articles.Where(a => a.Editors_Choice == true).OrderByDescending(a => a.Datetime).Take(3).ToList();}

<!-- Owl Carousel 1 -->
    <div id="owl-carousel-1" class="owl-carousel owl-theme center-owl-nav">
        @foreach (var a in articles)
        {
            <!-- ARTICLE -->
        <article class="article thumb-article">
            <div class="article-img">
                <img src="@Url.Content("~/Content/imgfiles/" + a.Images.Where(img => img.Number == 1)?.First()?.Id +
a.Images.Where(img => img.Number == 1)?.First()?.Name)" alt="">
            </div>
            <div class="article-body">
                <h2 class="article-title"><a href="\Articles\Details\@a.Id">@a.Heading</a></h2>
                <ul class="article-meta">
                    <li><i class="fa fa-clock-o"></i> @a.Datetime</li>
                    <li><i></i> Просмотров: @a.Views</li>
                    <li><i class="fa fa-comments"></i> @a.Comments.Count</li>
                </ul>
            </div>
        </article>
            <!-- /ARTICLE -->
            }
        </div>
<!-- /Owl Carousel 1 -->
